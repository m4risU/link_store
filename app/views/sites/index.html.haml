%h1 Listing sites

= simple_form_for @site, url: sites_path, method: :get, remote: true, html: { class: 'form-inline' } do |f|
  .row
    .col-md-12
      = f.input :search, input_html: { class: 'form-control' }, wrapper_html: { class: 'pull-right'}

#site-listing
  = render 'results'

#my-modal.modal.fade{:role => "dialog", :tabindex => "-1"}
